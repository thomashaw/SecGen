[Unit]
Description=Alert Router (SecGen: Auto Grading)
Requires=postgresql.service
Requires=elastalert.service
After=postgresql.service
After=elastalert.service

[Service]
EnvironmentFile=/etc/environment
ExecStart=/usr/bin/ruby /opt/alert_actioner/alert_router.rb start
ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
WorkingDirectory=/opt/alert_actioner/
Restart=always
User=deploy
Group=deploy

[Install]
WantedBy=multi-user.target
