<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

  <!-- Standard Action Servlet Configuration (with debugging) -->
  <display-name>jboard Bulletin board</display-name>
  <description>Provides a bulletin board management system.</description>
    <context-param>
      <!-- this parameter indicate to the jstl fmt tag where to localize the resourceBundle -->
    <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
    <param-value>resources.application</param-value>
    
  </context-param>  
  
   <filter>
    <filter-name>AccessFilter</filter-name>
     <description>registration module</description>      
    <filter-class>net.sf.jboard.filters.AccessFilter</filter-class>
  </filter>
     <filter>
    <filter-name>ForumPersistanceFilter</filter-name>
     <description>handle open/close hibernate session handling</description>      
    <filter-class>net.sf.jboard.filters.ForumPersistanceFilter</filter-class>
    <init-param>
    	<param-name>hibernateSessionFactory</param-name>
    	<param-value>/forum.cfg.xml</param-value>
    	<description>hibernate configuration file</description>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>AccessFilter</filter-name>
    <url-pattern>*.do</url-pattern>
  </filter-mapping>
    <filter-mapping>
    <filter-name>ForumPersistanceFilter</filter-name>
    <url-pattern>*.do</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>action</servlet-name>
    <description>jboard  struts servlet</description>
    <servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
    <init-param>
      <param-name>config</param-name>
      <param-value>/WEB-INF/conf/struts/struts-config.xml</param-value>
      <description>general module</description>
    </init-param>
    
    <init-param>
      <param-name>config/admin</param-name>
      <param-value>/WEB-INF/conf/struts/struts-config-admin.xml</param-value>
      <description>administration module</description>
    </init-param>
    
    <init-param>
      <param-name>config/reg</param-name>
      <param-value>/WEB-INF/conf/struts/struts-config-reg.xml</param-value>
      <description>registration module</description>      
    </init-param>
    <init-param>
    
      <param-name>config/stats</param-name>
      <param-value>/WEB-INF/conf/struts/struts-config-stats.xml</param-value>
      <description>stats module</description>            
    </init-param>
    <init-param>
      <param-name>config/forum</param-name>
      <param-value>/WEB-INF/conf/struts/struts-config-forum.xml</param-value>
      <description>forum module</description>      
    </init-param>
    
    <init-param>
      <param-name>locale</param-name>
      <param-value>false</param-value>
    </init-param>
    
    <init-param>
      <param-name>debug</param-name>
      <param-value>2</param-value>
    </init-param>
    <init-param>
      <param-name>detail</param-name>
      <param-value>2</param-value>
    </init-param>
    <load-on-startup>2</load-on-startup>
  </servlet>
<servlet>
  <servlet-name>ServletRedirector</servlet-name>
  <servlet-class>
    org.apache.cactus.server.ServletTestRedirector
  </servlet-class>
  <init-param>
    <param-name>param1</param-name>
    <param-value>value1 used for testing</param-value>
  </init-param>
</servlet>

<servlet>
  <servlet-name>ServletTestRunner</servlet-name>
  <servlet-class>
    org.apache.cactus.server.runner.ServletTestRunner
  </servlet-class>
</servlet>

  <!-- Standard Action Servlet Mapping -->
  <servlet-mapping>
    <servlet-name>action</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>
  
<servlet-mapping>
    <servlet-name>ServletRedirector</servlet-name>
    <url-pattern>/ServletRedirector</url-pattern>
</servlet-mapping>

<servlet-mapping>
    <servlet-name>ServletTestRunner</servlet-name>
    <url-pattern>/ServletTestRunner</url-pattern>
</servlet-mapping>

  <!-- The Usual Welcome File List -->
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

<!-- handling error code thrown by the application -->
