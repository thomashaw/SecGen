  <!-- Struts Tag Library Descriptors -->

  <taglib>
    <taglib-uri>/tags/struts-nested</taglib-uri>
    <taglib-location>/WEB-INF/conf/tld/struts-nested.tld</taglib-location>
  </taglib>

  <taglib>
    <taglib-uri>/tags/struts-tiles</taglib-uri>
    <taglib-location>/WEB-INF/conf/tld/struts-tiles.tld</taglib-location>
  </taglib>
  <!-- start of additionnal taglibs -->
  <taglib>
    <taglib-uri>/tags/struts/bean-el</taglib-uri>
    <taglib-location>/WEB-INF/conf/tld/struts-bean-el.tld</taglib-location>
  </taglib>

  <taglib>
    <taglib-uri>/tags/struts/html-el</taglib-uri>
    <taglib-location>/WEB-INF/conf/tld/struts-html-el.tld</taglib-location>
  </taglib>

  <taglib>
    <taglib-uri>/tags/struts/logic-el</taglib-uri>
    <taglib-location>/WEB-INF/conf/tld/struts-logic-el.tld</taglib-location>
  </taglib>
  
  <taglib>
    <taglib-uri>/tags/jstl/c</taglib-uri>
    <taglib-location>/WEB-INF/conf/tld/c.tld</taglib-location>
  </taglib>
  <!-- end of additionnal taglibs -->
<!-- set the JNDI datasource reference for DBCP (database connection pool) -->
 <resource-ref>
			 	<description>postgreSQL Datasource example</description>
			 	<res-ref-name>jdbc/postgres</res-ref-name>
			 	<res-type>javax.sql.DataSource</res-type>
			 	<res-auth>Container</res-auth>
 </resource-ref>
</web-app>
