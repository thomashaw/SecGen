<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping
    PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>
 <class name="net.sf.jboard.model.forum.dto.ForumCategory" table="forumcategory" >
   <id name="id" type="long" unsaved-value="0" column="cat_id">
   	 <generator class="native">
   		<param name="sequence">forumcategory_seq</param>
   	 </generator>
   </id>  
   <property name="title" column="cattitle" />	
   <property name="description" column="catdescription" />  
   <property name="componentPosition" column="componentposition" /> 
   <property name="creationDate" column="creationdate" />   
   <bag name="forumItems" table="forumitem" order-by="componentposition asc" cascade="all-delete-orphan" inverse="true">
   	 <key column="fk_parent_id"/>
   	 <one-to-many class="net.sf.jboard.model.forum.dto.ForumItem" />
   </bag>
 </class>
</hibernate-mapping>