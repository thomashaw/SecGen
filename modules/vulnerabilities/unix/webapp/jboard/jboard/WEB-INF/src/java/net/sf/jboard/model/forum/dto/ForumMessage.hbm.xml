<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping
    PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>

 <class name="net.sf.jboard.model.forum.dto.ForumMessage" table="forummessage">
   <id name="id" type="long" unsaved-value="0" column="message_id">
   	<generator class="native">
   		<param name="sequence">forummessage_seq</param>
   	</generator>
   </id>     		
   <property name="message" column="message" />	     
   <property name="viewsNumber" column="viewsnumber" />	 
   <property name="creationDate" column="creationdate" />
   <property name="userId" column="user_id" />		    
   <many-to-one  name="parent" column="fk_parent_id"  class="net.sf.jboard.model.forum.dto.ForumThread"  />  
 </class>

</hibernate-mapping>