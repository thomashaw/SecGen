<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<struts-config>
    
    <!-- ========== Data Source Configuration =============================== -->
    <data-sources />
    
    <!-- ========== Form Bean Definitions ================================== -->
    <form-beans><form-bean name="forumForm" type="org.apache.struts.validator.DynaValidatorForm"><form-property name="title" type="java.lang.String" size="10" /><form-property name="description" type="java.lang.String" size="50" /><form-property name="message" type="java.lang.String" size="1000" /><form-property name="id" type="java.lang.Long" /><form-property name="parentId" type="java.lang.Long" /><form-property name="forumRoot" type="net.sf.jboard.model.forum.dto.ForumRoot" /><form-property name="forumItem" type="net.sf.jboard.model.forum.dto.ForumItem" /><form-property name="forumThread" type="net.sf.jboard.model.forum.dto.ForumThread" /></form-bean></form-beans>
    
    <!-- ========== Global Exception Definitions ============================== -->
    <global-exceptions><exception type="net.sf.jboard.fwk.exception.ClientException" key="errors_dao" path="forumPanorama" /><exception type="net.sf.jboard.fwk.exception.ClientException" key="messages_transaction" path="forumPanorama" /><exception type="net.sf.jboard.fwk.exception.ViewException" key="errors_bean_utils" scope="request" path="forumPanorama" /><exception type="net.sf.jboard.fwk.exception.ViewException" key="errors_invalid_transaction" path="forumPanorama" scope="request" /></global-exceptions>
    
    <!-- ========== Global Forward Definitions =============================== -->
    
     <global-forwards type="org.apache.struts.action.ActionForward">
    
     <forward name="switchToRegModule" path="/SwitchToModule.do?prefix=/reg&amp;amp;page=/Logon.do" redirect="false" /><forward name="switchToGeneralModule" path="/SwitchToModuleprefix=/general&amp;amp;page=.general.welcome" redirect="false" /><forward name="forumCategory" path="/ForumCategory.do" redirect="false" /><forward name="forumItem" path="/ForumItem.do" redirect="false" /><forward name="forumThread" path="/ForumThread.do" redirect="false" /><forward name="forumMessage" path="/ForumMessage.do" redirect="false" /><forward name="postACategory" path="/PostACategory.do" redirect="false" /><forward name="postAForumItem" path="/PostAForumItem.do" redirect="false" /><forward name="postAForumThread" path="/PostAForumThread.do" redirect="false" /><forward name="postAMessage" path="/PostAMessage.do" redirect="false" /><forward name="updateForumCategory" path="/UpdateForumCategory.do" redirect="false" /><forward name="forumPanorama" path="/ForumPanorama.do" redirect="false" /><forward name="logon" redirect="false" contextRelative="true" path="/SwitchToModule.do?prefix=/reg&amp;page=/Logon.do" /><forward name="register" redirect="false" path="/SwitchToModule.do?prefix=/reg&amp;page=/Register.do" contextRelative="true" /><forward name="logoff" redirect="false" path="/SwitchToModule.do?prefix=/reg&amp;page=/Logoff.do" contextRelative="true" /></global-forwards>
    
    <!-- ========== Action Mapping Definitions =============================== -->
    <action-mappings type="org.apache.struts.action.ActionMapping">
     <action path="/SwitchToModule" type="org.apache.struts.actions.SwitchAction" /><action path="/ForumPanorama" type="net.sf.jboard.struts.forum.actions.ForumPanoramaAction" name="forumForm" validate="false" scope="request"><exception type="net.sf.jboard.fwk.exception.ClientException" key="" bundle="resources.application" path=".forum.panorama" /><forward name="panoramaOK" path=".forum.panorama" redirect="false" /></action><action path="/ForumCategory" parameter="method" name="forumForm" type="net.sf.jboard.struts.forum.actions.ForumCategoryDispatchAction" input="forumPanorama" validate="false" scope="request"><forward name="beforeUpdateCategoryOK" redirect="false" path=".forum.updateACategory" /><forward name="createCategoryOK" redirect="false" path=".forum.panorama" /><forward name="deleteCategoryOK" redirect="false" path=".forum.panorama" /><forward name="updateCategoryOK" redirect="false" path=".forum.panorama" /></action>
    <action path="/ForumItem" type="net.sf.jboard.struts.forum.actions.ForumItemDispatchAction" parameter="method" name="forumForm" validate="false" input="forumPanorama" scope="request"><forward name="readForumItemOK" redirect="false" path=".forum.forumItemContent" /><forward name="createForumItemOK" redirect="false" path=".forum.panorama" /><forward name="beforeUpdateForumItemOK" path=".forum.updateForumItem" redirect="false" /><forward name="updateForumItemOK" redirect="false" path=".forum.panorama" /><forward name="deleteForumItemOK" redirect="false" path=".forum.panorama" /></action><action path="/ForumThread" parameter="method" unknown="false" type="net.sf.jboard.struts.forum.actions.ForumThreadDispatchAction" name="forumForm" validate="false" scope="request"><forward name="createForumThreadOK" redirect="false" path=".forum.forumItemContent" /><forward name="readForumThreadOK" redirect="false" path=".forum.forumThreadContent" /><forward name="beforeUpdateForumThreadOK" redirect="false" path=".forum.updateForumThread" /><forward name="updateForumThreadOK" redirect="false" path=".forum.forumItemContent" /><forward name="deleteForumThreadOK" redirect="false" path=".forum.forumItemContent" /></action><action path="/ForumMessage" parameter="method" name="forumForm" validate="false" scope="request" type="net.sf.jboard.struts.forum.actions.ForumMessageDispatchAction"><forward name="readForumMessageOK" redirect="false" path=".forum.updateAMessage" /><forward name="createForumMessageOK" redirect="false" path=".forum.forumThreadContent" /><forward name="updateForumMessageOK" redirect="false" path=".forum.forumThreadContent" /><forward name="deleteForumMessageOK" redirect="false" path=".forum.forumThreadContent" /></action><action path="/PostACategory" forward=".forum.postACategory" name="forumForm" input="forumPanorama" validate="false" scope="request" /><action path="/PostAForumItem" forward=".forum.postAForumItem" name="forumForm" scope="request" input="forumPanorama" validate="false" /><action path="/PostAForumThread" name="forumForm" forward=".forum.postAForumThread" scope="request" validate="false" input="forumPanorama" /><action path="/PostAMessage" name="forumForm" input="forumPanorama" validate="false" forward=".forum.postAMessage" scope="request" /></action-mappings>
    <!-- ========== Controller Configuration ================================ -->
   <controller processorClass="org.apache.struts.tiles.TilesRequestProcessor" inputForward="true" pagePattern="/WEB-INF/modules$M$P" contentType="application/xhtml+xml;charset=UTF-8" locale="false" forwardPattern="$M$P" />
    <!-- ========== Message Resources Definitions ============================ -->
     <message-resources parameter="resources.application" null="true" />
    
    <!-- ========== Plug Ins Configuration ================================= -->
    <plug-in className="org.apache.struts.tiles.TilesPlugin">
        <set-property property="definitions-config" value="/WEB-INF/conf/struts/tiles-defs-common.xml,/WEB-INF/conf/struts/tiles-defs-forum.xml" />
        <set-property property="moduleAware" value="true" />
        <set-property property="definitions-parser-validate" value="true" /><set-property property="definitions-debug" value="2" /><set-property property="definitions-parser-details" value="2" /><set-property property="definitions-parser-validate" value="true" />
    </plug-in>
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property property="pathnames" value="/WEB-INF/conf/struts/validator-rules.xml,/WEB-INF/conf/struts/validation.xml" />
    </plug-in>
</struts-config>
