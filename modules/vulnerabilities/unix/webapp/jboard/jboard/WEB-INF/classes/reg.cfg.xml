<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration
    PUBLIC "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-2.0.dtd">

<hibernate-configuration>

    <session-factory>
        <property name="connection.datasource">java:comp/env/jdbc/postgres</property>
        <!--<property name="connection.datasource">java:comp/env/jdbc/oracle10g</property>-->
        <!--<property name="connection.datasource">java:comp/env/jdbc/mysql</property>-->
        <property name="show_sql">false</property>
        <!--<property name="dialect">net.sf.hibernate.dialect.Oracle9Dialect</property>-->        
        <property name="dialect">net.sf.hibernate.dialect.PostgreSQLDialect</property>
        <!--  <property name="dialect">net.sf.hibernate.dialect.MySQLDialect</property> -->   
        <!-- My 7.2 beta postgresql version doesn't support batch update -->        
        <property name="jdbc.batch_size">0</property>
        <!-- Mapping files -->
        <mapping resource="net/sf/jboard/model/reg/dto/User.hbm.xml"/>
        <mapping resource="net/sf/jboard/model/reg/dto/Role.hbm.xml"/>
    </session-factory>

</hibernate-configuration>