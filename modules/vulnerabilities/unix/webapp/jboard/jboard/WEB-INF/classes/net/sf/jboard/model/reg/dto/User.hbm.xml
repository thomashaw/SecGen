<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping
    PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>

 <class name="net.sf.jboard.model.reg.dto.User" table="usertable">
  <id name="id" type="long" unsaved-value="0" column="id">
   	<generator class="native">
   		<param name="sequence">user_seq</param>
   	</generator>
   </id>        	
   <property name="userName" column="username" />	
   <property name="password" column="password" /> 
   <property name="firstName" column="firstName" />
   <property name="lastName" column="lastName" />   
   <property name="icq" column="icq" />
   <property name="aim" column="aim" />
   <property name="msn" column="msn" />
   <property name="yahoo" column="yahoo" />
   <property name="webSite" column="webSite" />
   <property name="localisation" column="localisation" />
   <property name="job" column="job" />
   <property name="hobbies" column="hobbies" />
   <property name="signature" column="signature" />
   
   <set name="roles" table="user_role" >
   	<key column="user_id" />
   	<many-to-many class="net.sf.jboard.model.reg.dto.Role" column="role_id" />
   </set>
 </class>

</hibernate-mapping>