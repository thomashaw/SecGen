<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class
        name="org.roller.pojos.FolderData"
        table="folder"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="id"
            column="id"
            type="string"
            unsaved-value="null"
        >
            <generator class="uuid.hex">
            </generator>
        </id>

        <property
            name="name"
            type="java.lang.String"
            update="true"
            insert="true"
            column="name"
            unique="false"
        />

        <property
            name="description"
            type="java.lang.String"
            update="true"
            insert="true"
            column="description"
            unique="false"
        />

        <many-to-one
            name="website"
            class="org.roller.pojos.WebsiteData"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="websiteid"
            not-null="true"
        />

        <set
            name="bookmarks"
            lazy="true"
            inverse="false"
            cascade="none"
            sort="unsorted"
            order-by="name"
        >

              <key
                  column="folderid"
              />

              <one-to-many
                  class="org.roller.pojos.BookmarkData"
              />
        </set>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-FolderData.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
