<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class
        name="org.roller.pojos.WeblogCategoryAssoc"
        table="weblogcategoryassoc"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="id"
            column="id"
            type="string"
            unsaved-value="null"
        >
            <generator class="uuid.hex">
            </generator>
        </id>

        <many-to-one
            name="ancestorCategory"
            class="org.roller.pojos.WeblogCategoryData"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="ancestorid"
        />

        <many-to-one
            name="category"
            class="org.roller.pojos.WeblogCategoryData"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="categoryid"
            not-null="true"
        />

        <property
            name="relation"
            type="java.lang.String"
            update="true"
            insert="true"
            column="relation"
            unique="false"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-WeblogCategoryAssoc.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
