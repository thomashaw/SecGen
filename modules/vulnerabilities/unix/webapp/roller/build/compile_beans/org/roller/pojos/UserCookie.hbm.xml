<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class
        name="org.roller.pojos.UserCookie"
        table="usercookie"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="id"
            column="id"
            type="string"
            unsaved-value="null"
        >
            <generator class="uuid.hex">
            </generator>
        </id>

        <property
            name="username"
            type="java.lang.String"
            update="true"
            insert="true"
            column="username"
            not-null="true"
            unique="false"
        />

        <property
            name="cookieId"
            type="java.lang.String"
            update="true"
            insert="true"
            column="cookieid"
            not-null="true"
            unique="true"
        />

        <property
            name="dateCreated"
            type="java.util.Date"
            update="true"
            insert="true"
            column="datecreated"
            not-null="true"
            unique="false"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-UserCookie.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
