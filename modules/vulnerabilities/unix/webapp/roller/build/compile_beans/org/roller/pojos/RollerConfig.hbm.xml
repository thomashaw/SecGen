<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class
        name="org.roller.pojos.RollerConfig"
        table="rollerconfig"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="id"
            column="id"
            type="string"
            unsaved-value="null"
        >
            <generator class="uuid.hex">
            </generator>
        </id>

        <property
            name="absoluteURL"
            type="java.lang.String"
            update="true"
            insert="true"
            column="absoluteurl"
            unique="false"
        />

        <property
            name="rssUseCache"
            type="java.lang.Boolean"
            update="true"
            insert="true"
            column="rssusecache"
            unique="false"
        />

        <property
            name="rssCacheTime"
            type="java.lang.Integer"
            update="true"
            insert="true"
            column="rsscachetime"
            unique="false"
        />

        <property
            name="newUserAllowed"
            type="java.lang.Boolean"
            update="true"
            insert="true"
            column="newuserallowed"
            unique="false"
        />

        <property
            name="adminUsers"
            type="java.lang.String"
            update="true"
            insert="true"
            column="adminusers"
            unique="false"
        />

        <property
            name="userThemes"
            type="java.lang.String"
            update="true"
            insert="true"
            column="userthemes"
            unique="false"
        />

        <property
            name="editorPages"
            type="java.lang.String"
            update="true"
            insert="true"
            column="editorpages"
            unique="false"
        />

        <property
            name="enableAggregator"
            type="java.lang.Boolean"
            update="true"
            insert="true"
            column="enableaggregator"
            unique="false"
        />

        <property
            name="uploadEnabled"
            type="java.lang.Boolean"
            update="true"
            insert="true"
            column="uploadenabled"
            unique="false"
        />

        <property
            name="uploadMaxDirMB"
            type="big_decimal"
            update="true"
            insert="true"
            column="uploadmaxdirmb"
            unique="false"
        />

        <property
            name="uploadMaxFileMB"
            type="big_decimal"
            update="true"
            insert="true"
            column="uploadmaxfilemb"
            unique="false"
        />

        <property
            name="uploadAllow"
            type="java.lang.String"
            update="true"
            insert="true"
            column="uploadallow"
            unique="false"
        />

        <property
            name="uploadForbid"
            type="java.lang.String"
            update="true"
            insert="true"
            column="uploadforbid"
