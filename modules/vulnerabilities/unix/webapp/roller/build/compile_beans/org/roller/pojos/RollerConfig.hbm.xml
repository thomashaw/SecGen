            column="uploaddir"
            unique="false"
        />

        <property
            name="uploadPath"
            type="java.lang.String"
            update="true"
            insert="true"
            column="uploadpath"
            unique="false"
        />

        <property
            name="memDebug"
            type="java.lang.Boolean"
            update="true"
            insert="true"
            column="memdebug"
            unique="false"
        />

        <property
            name="autoformatComments"
            type="java.lang.Boolean"
            update="true"
            insert="true"
            column="autoformatcomments"
            unique="false"
        />

        <property
            name="escapeCommentHtml"
            type="java.lang.Boolean"
            update="true"
            insert="true"
            column="escapecommenthtml"
            unique="false"
        />

        <property
            name="emailComments"
            type="java.lang.Boolean"
            update="true"
            insert="true"
