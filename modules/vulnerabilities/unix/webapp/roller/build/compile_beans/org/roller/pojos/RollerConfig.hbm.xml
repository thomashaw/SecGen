            type="java.lang.String"
            update="true"
            insert="true"
            column="sitename"
            unique="false"
        />

        <property
            name="emailAddress"
            type="java.lang.String"
            update="true"
            insert="true"
            column="emailaddress"
            unique="false"
        />

        <property
            name="indexDir"
            type="java.lang.String"
            update="true"
            insert="true"
            column="indexdir"
            unique="false"
        />

        <property
            name="encryptPasswords"
            type="java.lang.Boolean"
            update="true"
            insert="true"
            column="encryptpasswords"
            unique="false"
        />

        <property
            name="algorithm"
            type="java.lang.String"
            update="true"
            insert="true"
            column="algorithm"
            unique="false"
